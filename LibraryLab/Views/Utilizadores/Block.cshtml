@model LibraryLab.Models.Utilizador

@{
    ViewData["Title"] = "Bloquear Utilizador";
}

<h2>Bloquear Utilizador</h2>

<h4>@Model.Nome (@Model.Username)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Block">
            <div class="form-group">
                <label asp-for="BlockReason" class="control-label"></label>
                <textarea asp-for="BlockReason" class="form-control"></textarea>
                <span asp-validation-for="BlockReason" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <br />
            <div class="form-group">
                <input type="submit" value="Bloquear" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>
